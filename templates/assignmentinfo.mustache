{{!
    @template report_grade/assignmentinfo

    Displays assignment information

    Context variables required for this template:
    * title
    * sitting
    * externaldate

    Example context (json):
    {
        "title": "Assignment title",
        "sitting": "Sitting number",
        "externaldate": "2024-06-01"
    }
}}
{{#title}}
<h3>{{{.}}}</h3>
{{/title}}
<ul>
    {{#sitting}}
    <li>{{#str}} sitting, report_grade, {{.}}{{/str}}</li>
    {{/sitting}}
    {{#externaldate}}
    <li>{{#str}} externaldate, report_grade, {{.}}{{/str}}</li>
    {{/externaldate}}
</ul>